<apex:component >
    <apex:attribute name="f" description="Field to render" type="DynamicField" required="true" />
    <!-- Use .form-group to create spacing when wrapping label and input pairs -->
    <label class="form-label" for="text-input">{!f.fieldLabel}
        <span class="form-hint">Currency</span>
    </label>
    <apex:inputText styleClass="form-control" value="{!f.fieldValue}" id="currency-input" />
</apex:component>
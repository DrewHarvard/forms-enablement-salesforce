<apex:component >

	<apex:attribute name="f" 
        			description="Field to render"
        			type="DynamicField"
        			required="true" />
        			
	<apex:outputPanel layout="inline" rendered="{!f.inputType=='Text'}">
		<c:GDSInputText f="{!f}" />
	</apex:outputPanel>
	<apex:outputPanel layout="inline" rendered="{!f.inputType=='Date'}">
		<c:GDSInputDate f="{!f}" />
	</apex:outputPanel>
</apex:component>
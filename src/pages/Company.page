                <h1 class="heading-xlarge">
                    {!$Label.UI_Text_Enter_Company_Number}
                </h1>   
            
                <!-- <p>{!$Label.UI_Text_Company_Page_Display_Text}</p>          
            
                <br /> -->

                <div class="form-group">
                    <label class="form-label" for="text-input">{!$Label.UI_Text_Enter_Company_Number}
                        <span class="form-hint">This is the number you put at the bottom of your company stationery, e.g. 80082211</span>
                    </label>
                    <apex:outputPanel rendered="{!hasPageErrors}">
                    <span  class="error-message" id="error-message-full-name">Must contain 8 digits or 2 prefix letters and 6 digits that identify your company.</span>
                    </apex:outputPanel>
                    <br/>
                    <apex:inputText styleClass="form-control" value="{!companyNumber}" id="text-input" maxlength="8"/>
                </div>                              
                
                <!--&nbsp;<apex:commandButton styleClass="button" action="{!previousAction}" value="{!$Label.UI_Text_Previous}" /> -->
                <apex:commandButton styleClass="button" action="{!nextAction}" value="Confirm my company details" reRender="formID"/>
                <br/>
         		<apex:commandLink action="{!previousAction}" value="{!$Label.UI_Text_Previous}" id="thePreviousButton"/> 
         		
                
            </apex:form>
                
        </apex:define>
  
    </apex:composition>


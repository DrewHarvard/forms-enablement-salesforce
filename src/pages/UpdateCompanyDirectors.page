<apex:page title="{!$Label.UI_Text_Update_Company_Directors}" showHeader="false" sidebar="false" standardStylesheets="false" controller="UpdateCompanyDirectorsController" action="{!initialiseAction}">
    <apex:composition template="TransactionPageTemplate">
        <apex:define name="content">
            <apex:form >
                <h1 class="heading-xlarge">
                   {!title} 
                </h1>
                <apex:outputPanel rendered="{!!isLLPf}">
                <p class="lede">
                    <apex:outputText escape="false" value="{!HTMLENCODE(body)}"></apex:outputText>
                    <a href="https://www.gov.uk/government/collections/change-director-details-on-your-limited-company">
                        <apex:outputText escape="false" value="{!HTMLENCODE(link)}"></apex:outputText>
                    </a>
                </p>
                </apex:outputPanel>
                <apex:outputPanel rendered="{!isLLPf}">
                    <p class="lede">
                    <apex:outputText escape="false" value="{!HTMLENCODE(body)}"></apex:outputText>
                    <a href="https://www.gov.uk/government/collections/change-member-details-on-your-limited-liability-partnership-llp">
                        <apex:outputText escape="false" value="{!HTMLENCODE(link)}"></apex:outputText>
                    </a>
                </p>
                </apex:outputPanel>
            </apex:form>
        </apex:define>
    </apex:composition>
</apex:page>